{
    "testRunner": {
        "args": {
            "$0": "jest",
            "config": "e2e/jest.config.js"
        }
    },
    "artifacts": {
        "rootDir": "e2e/artifacts",
        "plugins": {
            "screenshot": {
                "shouldTakeAutomaticSnapshots": true,
                "keepOnlyFailedTestsArtifacts": false,
                "takeWhen": {
                    "testStart": true,
                    "testDone": true
                }
            }
        }
    },
    "apps": {
        "ios.debug": {
            "type": "ios.app",
            "binaryPath": "ios/build/Build/Products/Debug-iphonesimulator/detoxdemogithubactions.app",
            "build": "xcodebuild -workspace ios/detoxdemogithubactions.xcworkspace -scheme detoxdemogithubactions -configuration Debug -sdk iphonesimulator -derivedDataPath ios/build"
        },
        "android.debug": {
            "type": "android.apk",
            "binaryPath": "android/app/build/outputs/apk/debug/app-debug.apk",
            "build": "cd android && ./gradlew assembleDebug assembleAndroidTest -DtestBuildType=debug",
            "reversePorts": [
                8081
            ]
        }
    },
    "devices": {
        "ios": {
            "type": "ios.simulator",
            "device": {
                "type": "iPhone 16"
            }
        },
        "android": {
            "type": "android.simulator",
            "device": {
                "avdName": "Medium_Phone_API_35"
            }
        }
    },
    "configurations": {
        "ios": {
            "device": "ios",
            "app": "ios.debug"
        },
        "android": {
            "device": "android",
            "app": "android.debug"
        }
    }
}